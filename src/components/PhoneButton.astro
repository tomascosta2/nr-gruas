---
export interface Props {
  variant?: 'header' | 'hero' | 'mobile' | 'footer';
}

const { variant = 'header' } = Astro.props;

const getClasses = () => {
  switch (variant) {
    case 'hero':
      return 'btn-lg btn-accent flex items-center gap-2 relative shadow-lg shadow-accent-500/20';
    case 'mobile':
      return 'btn-accent w-full mt-2 flex items-center justify-center gap-2';
    case 'footer':
      return 'btn-primary flex items-center gap-2';
    default:
      return 'btn-primary flex items-center gap-2';
  }
};

const phoneNumber = '2617777133';
const displayNumber = '(261) 777-7133';
---

